<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 定义了三个颜色 填充的尺寸 进度 文字的可见性 -->
    <declare-styleable name="myProgressBar">
        <attr name="complete_color" format="color"></attr>
        <attr name="uncomplete_color" format="color"></attr>
        <attr name="fill_color" format="color"></attr>
        <attr name="text_color" format="color"></attr>
        <attr name="fill_radius" format="dimension"></attr>
        <attr name="text_size" format="dimension"></attr>
        <attr name="progress" format="integer"></attr>
        <attr name="maxprogress" format="integer"></attr>
        <attr name="text_visibility" format="enum">
            <enum name="visible" value="1"></enum>
            <enum name="invisible" value="0"></enum>
        </attr>
    </declare-styleable>

</resources>